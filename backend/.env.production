# Database Configuration
DB_HOST=db
DB_PORT=5432
DB_NAME=eld_planner
DB_USER=postgres
DB_PASSWORD=postgres

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# Celery Configuration
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
CELERY_WORKER_CONCURRENCY=2
CELERY_WORKER_LOG_LEVEL=INFO
CELERY_BEAT_LOG_LEVEL=INFO

# Django Configuration
SECRET_KEY=your-production-secret-key-here-change-in-production
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,backend,nginx

# Cache Configuration
TRIP_PLAN_CACHE_TIMEOUT=86400
API_CACHE_TIMEOUT=300
USER_STATS_CACHE_TIMEOUT=3600
GEOCODED_ADDRESS_CACHE_TIMEOUT=604800

# OpenRouteService API (get from https://openrouteservice.org/dev/#/register)
OPENROUTESERVICE_API_KEY=your-openrouteservice-api-key

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
EMAIL_USE_TLS=True
EMAIL_FROM=your-email@gmail.com

# Security Settings
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False

# Application Settings
CORS_ALLOWED_ORIGINS=http://localhost:80,http://127.0.0.1,http://localhost,https://yourdomain.com
CORS_ALLOW_CREDENTIALS=True

# Frontend URL for API
VITE_API_URL=http://localhost/api

# Nginx/Proxy Settings
USE_X_FORWARDED_HOST=True
USE_X_FORWARDED_PORT=True
USE_X_FORWARDED_PROTO=True

# File Upload Settings
FILE_UPLOAD_MAX_MEMORY_SIZE=10485760  # 10MB
DATA_UPLOAD_MAX_MEMORY_SIZE=10485760

# Logging Configuration
LOG_LEVEL=INFO
CELERY_LOG_LEVEL=INFO
ENABLE_DEBUG_TOOLBAR=False

# Performance Settings
CONN_MAX_AGE=60
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Monitoring and Health
ENABLE_HEALTH_CHECKS=True
HEALTH_CHECK_INTERVAL=30
METRICS_ENABLED=False